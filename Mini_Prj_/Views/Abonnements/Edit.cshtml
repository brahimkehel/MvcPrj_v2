@model Mini_Prj_.Models.Abonnement

@{
    ViewBag.Title = "Edit";
}

<div class="shadow-lg p-3 mb-5 bg-white w-75 rounded m-auto">
    <div class="row justify-content-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="text-align:center">Abonnement</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="form-group">
                    @Html.LabelFor(model => model.idTrajet, "idTrajet", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idTrajet", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idTrajet, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idSociete, "idSociete", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input name="idSociete" id="idSociete" value="@ViewBag.UsrSession.id" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date_debut, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_debut, new { htmlAttributes = new { type = "datetime-local", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_debut, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date_fin, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_fin, new {htmlAttributes = new { type = "datetime-local", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_fin, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tarif, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.tarif, new { htmlAttributes = new { type = "number", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.tarif, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Save" class="btn btn-outline-info w-100" />
                    </div>
                </div>
            </div>
        }

    </div>
    <div>
        <a href="@Url.Action("Index","Abonnements")"><i class="fas fa-arrow-left"></i> Retour à la liste des Abonnements</a>
    </div>
</div>
