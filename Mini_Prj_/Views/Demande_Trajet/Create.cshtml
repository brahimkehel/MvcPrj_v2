@model Mini_Prj_.Models.Demande_Trajet

@{
    ViewBag.Title = "Create";
}

<div class="shadow-lg p-3 mb-5 bg-white w-75 rounded m-auto">
    <div class="row justify-content-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Demander un Trajet</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.depart, "depart", htmlAttributes: new { @class = "control -label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("depart", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.depart, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.arriver, "arriver", htmlAttributes: new { @class = "control -label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("arriver", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.arriver, "", new { @class = "text-danger" })
                </div>
            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date_depart, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_depart, new { htmlAttributes = new { type = "datetime-local", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_depart, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.date_arriver, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_arriver, new { htmlAttributes = new { type = "datetime-local", @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_arriver, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.idUtilisateur, "idUtilisateur", htmlAttributes: new { @class = "control-label col-md-2", @style = "display:none" })
                    <div class="col-md-10">
                        <input name="idUtilisateur" id="idUtilisateur" value="@ViewBag.UsrSession.id" class="form-control" hidden readonly />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Demander" class="btn w-100 btn-outline-success" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div>
        <a href="@Url.Action("MesDemandes","Demande_Trajet")"><i class="fas fa-arrow-left"></i> Retour à la liste des Demandes</a>
    </div>
</div>
