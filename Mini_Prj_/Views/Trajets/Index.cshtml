@model IEnumerable<Mini_Prj_.Models.Trajet>

@{
    ViewBag.Title = "Index";
}

<p>
    <i class="fas fa-plus-circle"></i>
    @Html.ActionLink("Ajouter Trajet", "Create")
</p>
<table class="table table-hover table-responsive-lg">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.arriver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_arriver)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.depart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.arriver)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_depart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date_arriver)
        </td>
        <td>
            <a class="fas fa-pen-square" href="@Url.Action("Edit", "Trajets", new { id = item.id })"></a> |
            @Html.ActionLink("Details", "Details", new { id = item.id }) |
            <a class="fas fa-trash" href="@Url.Action("Delete", "Trajets", new { id = item.id })"></a>

        </td>
    </tr>
}

</table>
