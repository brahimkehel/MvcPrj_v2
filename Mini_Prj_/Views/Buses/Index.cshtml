@model IEnumerable<Mini_Prj_.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<p>
    <i class="fas fa-plus-circle"></i>
    @Html.ActionLink("Ajouter Bus", "Create")
</p>
<table class="table table-hover table-responsive-lg" style="max-height: 300px; ">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.typeDeVehicule)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Societe.raisonSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trajet.depart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trajet.arriver)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.typeDeVehicule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description_)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Societe.raisonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trajet.depart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trajet.arriver)
            </td>
            <td>
                <a class="fas fa-pen-square" href="@Url.Action("Edit", "Buses", new { id = item.id })"></a> |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                <a class="fas fa-trash" href="@Url.Action("Delete", "Buses",new { id = item.id })"></a>

            </td>
        </tr>
    }

</table>
